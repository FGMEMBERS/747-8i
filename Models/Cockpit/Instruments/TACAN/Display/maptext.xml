<?xml version="1.0"?>


<PropertyList>
    <name>MAPtext</name>
    <w-base>256</w-base>
    <h-base>256</h-base>

    <layers>

        <layer>
            <name>bkgrd</name>
            <w>256</w>
            <h>256</h>
            <texture>
                <path>Aircraft/747-8i/Models/Cockpit/Instruments/MFD/transparent.png</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1</x2>
                <y2>1</y2>
            </texture>
        <emissive>true</emissive>
        </layer>

<!-- TACAN -->

        <layer>
            <condition>
                <property>instrumentation/tacan/powered</property>
            </condition>
            <name>TACAN</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>1.0</red>
                <green>0.5</green>
                <blue>0.1</blue>
            </color>
            <chunks>
                <chunk>
                    <type>literal</type>
                    <text>TACAN</text>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-80</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-108</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <condition>
                <property>instrumentation/tacan/powered</property>
            </condition>
            <name>TACAN ID</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>1.0</red>
                <green>0.5</green>
                <blue>0.1</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/tacan/ident</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-80</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-118</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <condition>
                <and>
                    <property>instrumentation/tacan/powered</property>
                    <property>instrumentation/tacan/in-range</property>
                </and>
            </condition>
            <name>TACAN dme</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>1.0</red>
                <green>0.5</green>
                <blue>0.1</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/tacan/indicated-distance-nm</property>
                    <format>DME%3.1f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-80</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-128</offset>
                </transformation>
            </transformations>
        </layer>

    </layers>


</PropertyList>
