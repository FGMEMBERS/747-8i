<?xml version="1.0"?>


<PropertyList>
    <name>MAP</name>
    <w-base>256</w-base>
    <h-base>256</h-base>

    <layers>

<!-- arc mode -->

        <layer>
            <condition>
                <and>
                    <not>
                        <property>instrumentation/efis/inputs/nd-centered</property>
                    </not>
                    <property>instrumentation/tacan/powered</property>
                    <property>instrumentation/tacan/in-range</property>
                </and>
            </condition>
            <name>TACAN head</name>
            <emissive>true</emissive>
            <w>12</w>
            <h>28</h>
            <texture>
                <path>Aircraft/747-8i/Models/Cockpit/Instruments/TACAN/Display/tacan-display.png</path>
                <x1>0.143</x1>
                <y1>0.297</y1>
                <x2>0.212</x2>
                <y2>0.454</y2>
            </texture>
           <transformations>
            <transformation>
                <type>y-shift</type>
                <offset>-78</offset>
            </transformation>
            <transformation>
                <type>rotation</type>
                <!--  nav receiver has true heading, so subtract true (not magnetic) heading!  -->
                <property>orientation/heading-deg</property> 
                <scale>-1</scale>
            </transformation>
            <transformation>
                <type>rotation</type>
                <property>instrumentation/tacan/indicated-bearing-true-deg</property>
            </transformation>
            <transformation><!--shift rotation origin-->
                <type>y-shift</type>
                <offset>157</offset>
            </transformation>
        </transformations>
        </layer>

        <layer>
            <condition>
                <and>
                    <not>
                        <property>instrumentation/efis/inputs/nd-centered</property>
                    </not>
                    <property>instrumentation/tacan/powered</property>
                    <property>instrumentation/tacan/in-range</property>
                </and>
            </condition>
            <name>TACAN tail</name>
            <emissive>true</emissive>
            <w>12</w>
            <h>28</h>
            <texture>
                <path>Aircraft/747-8i/Models/Cockpit/Instruments/TACAN/Display/tacan-display.png</path>
                <x1>0.143</x1>
                <y1>0.093</y1>
                <x2>0.212</x2>
                <y2>0.250</y2>
            </texture>
           <transformations>
            <transformation>
                <type>y-shift</type>
                <offset>-78</offset>
            </transformation>
            <transformation>
                <type>rotation</type>
                <!--  nav receiver has true heading, so subtract true (not magnetic) heading!  -->
                <property>orientation/heading-deg</property> 
                <scale>-1</scale>
            </transformation>
            <transformation>
                <type>rotation</type>
                <property>instrumentation/tacan/indicated-bearing-true-deg</property>
            </transformation>
            <transformation><!--shift rotation origin-->
                <type>y-shift</type>
                <offset>-157</offset>
            </transformation>
        </transformations>
        </layer>

<!-- full mode -->

        <layer>
            <condition>
                <and>
                    <property>instrumentation/efis/inputs/nd-centered</property>
                    <property>instrumentation/tacan/powered</property>
                    <property>instrumentation/tacan/in-range</property>
                </and>
            </condition>
            <name>TACAN head</name>
            <emissive>true</emissive>
            <w>10</w>
            <h>24</h>
            <texture>
                <path>Aircraft/747-8i/Models/Cockpit/Instruments/TACAN/Display/tacan-display.png</path>
                <x1>0.143</x1>
                <y1>0.297</y1>
                <x2>0.212</x2>
                <y2>0.454</y2>
            </texture>
           <transformations>
            <transformation>
                <type>y-shift</type>
                <offset>-12</offset>
            </transformation>
            <transformation>
                <type>rotation</type>
                <!--  nav receiver has true heading, so subtract true (not magnetic) heading!  -->
                <property>orientation/heading-deg</property> 
                <scale>-1</scale>
            </transformation>
            <transformation>
                <type>rotation</type>
                <property>instrumentation/tacan/indicated-bearing-true-deg</property>
            </transformation>
            <transformation><!--shift rotation origin-->
                <type>y-shift</type>
                <offset>80</offset>
            </transformation>
        </transformations>
        </layer>

        <layer>
            <condition>
                <and>
                    <property>instrumentation/efis/inputs/nd-centered</property>
                    <property>instrumentation/tacan/powered</property>
                    <property>instrumentation/tacan/in-range</property>
                </and>
            </condition>
            <name>TACAN tail</name>
            <emissive>true</emissive>
            <w>10</w>
            <h>24</h>
            <texture>
                <path>Aircraft/747-8i/Models/Cockpit/Instruments/TACAN/Display/tacan-display.png</path>
                <x1>0.143</x1>
                <y1>0.093</y1>
                <x2>0.212</x2>
                <y2>0.250</y2>
            </texture>
           <transformations>
            <transformation>
                <type>y-shift</type>
                <offset>-12</offset>
            </transformation>
            <transformation>
                <type>rotation</type>
                <!--  nav receiver has true heading, so subtract true (not magnetic) heading!  -->
                <property>orientation/heading-deg</property> 
                <scale>-1</scale>
            </transformation>
            <transformation>
                <type>rotation</type>
                <property>instrumentation/tacan/indicated-bearing-true-deg</property>
            </transformation>
            <transformation><!--shift rotation origin-->
                <type>y-shift</type>
                <offset>-80</offset>
            </transformation>
        </transformations>
        </layer>

</layers>

</PropertyList>
